<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imageURL"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <br.com.samuelnunes.valorantpassbattle.ui.view.viewsCustom.ElevationImageView
            android:id="@+id/imageViewMain"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="6dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            app:clipShadow="false"
            app:compatEvelation="30dp"
            app:isTranslucent="false"
            android:contentDescription="@string/recompensa"
            app:imageUrl="@{imageURL}"
            tools:src="@drawable/ic_sheriff" />

    </LinearLayout>

</layout>
