<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.view.fragment.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp">

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:adSize="BANNER"
                    android:padding="4dp"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="450dp"
                app:title="@string/seu_passe_de_batalha">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentChart"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.ChartExpPerTierFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:title="Tier 17">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentTierCurrent"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.TierCurrentFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/fragment_tier_current" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:adSize="LARGE_BANNER"
                    android:padding="4dp"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:title="Propriedades">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentPropriets"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.PropriedadesFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_gravity="center"
                app:isSlider="true">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragmentListTiers"
                    android:name="br.com.battlepassCalculatorValorant.ui.view.fragment.Principal.RewardsFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <br.com.battlepassCalculatorValorant.ui.view.views.CardModule
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:adSize="MEDIUM_RECTANGLE"
                    android:padding="4dp"
                    app:adUnitId="@string/admob_card_id_test" />
            </br.com.battlepassCalculatorValorant.ui.view.views.CardModule>

            <View
                android:layout_width="match_parent"
                android:layout_height="55dp" />
        </LinearLayout>
    </ScrollView>
</layout>