<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.battlepassCalculatorValorant">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".BattlePassCalculatorApp"
        android:theme="@style/Theme.ValorantPassBattle"
        tools:ignore="AllowBackup">

        <activity
            android:name="br.com.battlepassCalculatorValorant.ui.view.activity.IntroTutorialActivity"
            android:theme="@style/Theme.ValorantPassBattle.Light.NoActionBar.FullScreen" />
        <activity
            android:name="br.com.battlepassCalculatorValorant.ui.view.activity.EditHistoricActivity"
            android:theme="@style/Theme.ValorantPassBattle.NoActionBar" />

        <receiver
            android:name=".notification.NotificationReceiver"
            android:enabled="true" />

        <activity
            android:name="br.com.battlepassCalculatorValorant.ui.view.activity.SplashScreenActivity"
            android:theme="@style/Theme.ValorantPassBattle.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.battlepassCalculatorValorant.ui.view.activity.MainActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/Theme.ValorantPassBattle.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>